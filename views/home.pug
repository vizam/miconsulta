extends layout
block content
  //Navigation bar
  div(class="w3-bar w3-theme w3-large")
    a(href="/" class="w3-bar-item w3-button material-icons w3-text-green") home
    a(href="" class="w3-bar-item w3-button") About
    a(href="" class="w3-bar-item w3-button") Contact Us
    a(href="/users" class="w3-bar-item w3-button") Login
  //Container for Layout
  div(class="w3-row")
  //Left section
  div(class="w3-twothird")
    header(class="w3-container w3-center w3-padding-48")
      h1(class="w3-jumbo w3-text-blue") Pillow
      h6 A simple medical record
        span(class="w3-tag w3-theme") as hand-written
  //Right section
  div(class="w3-third")
    form(class='w3-container w3-card-4 w3-margin')
      span(class="material-icons w3-text-green w3-block w3-center" style="font-size: 10vw;") account_box
      label: b User:
      input(class="w3-input we-border w3-margin-bottom" type="text" placeholder="Enter username" name="username" required autofocus)
      label Password
      input(class="w3-input we-border w3-margin-bottom" type="password" placeholder="Enter password" name="password" required)
      button(class="w3-button w3-block w3-green w3-section w3-padding" type="submit") Login
      input(class="w3-check w3-section" type="checkbox" checked="checked")
      label  Remember me
      br
      a(href="#" class="w3-right w3-section") Forgot Password ?
      span(class="w3-block w3-section") New User? 
        a(href="/users/register" class='') Register


