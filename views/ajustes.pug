extends layout
block head
  script(src='/javascripts/gui.js')
block content
  // Navigation bar
  div.w3-bar.w3-theme.w3-large
    a.w3-bar-item.w3-button.w3-hover-white(href="/")
      span.fas.fa-home
    span.w3-bar-item.w3-wide Ajustes
    a.w3-bar-item.w3-button.w3-right.w3-hover-white(href="/users/logout")
      span.fas.fa-sign-out-alt
    a.w3-bar-item.w3-button.w3-right.w3-hover-white(
    href="/records")
      span.fas.fa-search
  // Content
  div.w3-auto
    div.w3-section.w3-card-4
      h1.w3-theme.w3-padding Datos Profesionales
      form#datosProfesionales.w3-container(onsubmit="almacenarDatosProfesionales(event)")
        input.w3-input.w3-section(name="grado" type="text"
        placeholder="GRADO ACADEMICO (Dr./Mg. S./etc")
        input.w3-input.w3-section(name="nombres" type="text" placeholder="Nombres")
        input.w3-input.w3-section(name="apellidos" type="text" placeholder="Apellidos")
        input.w3-input.w3-section(name="especialidad" type="text" placeholder="Especialidad")
        input.w3-input.w3-section(name="credencial1" type="text"
        placeholder="Ejemplo: CI:11.886.089)")
        input.w3-input.w3-section(name="credencial2" type="text"
        placeholder="Ejemplo: MPPS.59808")
        input.w3-input.w3-section(name="credencial3" type="text"
        placeholder="Ejemplo: COMEZU.11293")
        input.w3-button.w3-blue.w3-section.w3-right(
        type='submit' value='Almacenar') 
    div.w3-section.w3-card-4
      h1.w3-theme.w3-padding Firma Electr√≥nica
      form.w3-container(onsubmit="almacenarFirma(event)")
        input.w3-input(name="firma" type="file" disabled)
        input.w3-button.w3-blue.w3-section.w3-right(
        type='submit' value='Almacenar' disabled)
  
  include panelinfo.pug

  script window.onload = poblarAjustes;

  
  
