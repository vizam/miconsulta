extends layout
block content
  // Navigation bar
  div.w3-bar.w3-theme.w3-large
    a(href="/" class="w3-bar-item w3-button material-icons") home
    a(href="" class="w3-bar-item w3-button") item2
    a(href="" class="w3-bar-item w3-button") item3
    a(href="" class="w3-bar-item w3-button w3-right") ajustes
  <div id="configuracion" class="w3-row-padding w3-card-4 w3-margin section noprint" style="display: none;">
    <!--Third bad 1st half-->
    <div class="w3-half w3-padding-large">
      <form id="datosProfesionales" class="w3-container" onsubmit="almacenarDatosProfesionales(event)">
        <h2 class="w3-text-blue">Datos del MÃ©dico</h2>
