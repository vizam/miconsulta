extends layout
block head
  script(src='/javascripts/gui.js')
block content
  //Navigation bar
  div.w3-bar.w3-theme.w3-large
    a.w3-bar-item.w3-button(href="/")
      span.fas.fa-home
      span.w3-margin Home
  //Content
  div.w3-content(style='max-width: 480px')
    form.w3-padding.w3-section.w3-card-4.w3-theme-l3(method='POST' action='/users')
      i.fas.fa-fingerprint.w3-block.w3-center.w3-jumbo.w3-text-blue
      label: b Email:
      input.w3-input.we-border.w3-margin-bottom.w3-round.w3-theme-l4(name="email" type="email"
      placeholder="Enter username"  required autofocus)
      label: b Password:
      input.w3-input.w3-border.w3-margin-bottom.w3-round.w3-theme-l4(name="password" type="password"
      placeholder="Enter password" required)
      button.w3-button.w3-right.w3-section.w3-round.w3-blue(type="submit") Login
      input.w3-check.w3-section(type="checkbox" checked="checked")
      label  Remember me
      br
      a.w3-right.w3-section(href="#") Forgot Password ?
      span.w3-block.w3-section New User? 
        a(href="/users/register") Register
      //Holders for backend result custom details
      span#type(style='display: none') #{type}
      span#msg(style='display: none ') #{msg}
  include panelinfo.pug
  script.
    let type = document.querySelector('#type').innerHTML;
    let msg = document.querySelector('#msg').innerHTML;
    window.onload = panelInformativo(type, msg);