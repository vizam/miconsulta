extend layout
block head
  link(rel='stylesheet' href='/stylesheets/mystyles.css')
  script(src='/javascripts/gui.js')
  script(src='/javascripts/validations.js')
block content
  //Navigation bar
  div.w3-bar.w3-theme.w3-large
    a.w3-bar-item.w3-button.w3-hover-white(href="/")
      span.fas.fa-home
      span.w3-margin Home
  //Content
  div.w3-auto.w3-padding(style='max-width: 480px')
    form.w3-padding.w3-section.w3-card-4.w3-theme-l3(
    method='POST' action='/users/storeuser')
      i.fas.fa-user-edit.w3-block.w3-center.w3-jumbo.w3-text-blue
      label: b Name  
      input.w3-input.w3-border.w3-margin-bottom(name="name" type='text' required autofocus)
      label: b Last Name
      input.w3-input.w3-border.w3-margin-bottom(name="lastname" type='text' required)
      label: b Email
      input.w3-input.w3-border.w3-margin-bottom(name="email" type='email'
      onkeyup='checkEmail()' required)
      label: b Confirm Email
      input.w3-input.w3-border.w3-margin-bottom(name="confirmemail" type='email'
      onkeyup='checkEmail()' required)
      label: b Password
      input.w3-input.w3-border.w3-margin-bottom(name="password" type='password'
      onkeyup='checkPassword()' required)
      label: b Confirm Password
      input.w3-input.w3-border.w3-margin-bottom(name="confirmpassword" type='password' onkeyup='checkPassword()' required)
      button.w3-button.w3-section.w3-round.w3-blue(type="submit" style='') Register
    //Holders for backend result custom details
    //span#type(style='display: none') #{messageType}
    //span#msg(style='display: none ') #{message}
  include panelinfo.pug
  script.
    window.onload = panelInformativo;
